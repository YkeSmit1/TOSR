<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <target 
      name="logfile" 
      xsi:type="File" 
      fileName="${basedir}/logs/tosr.log" 
      archiveFileName="${basedir}/logs/archive.{#}.log"
      archiveEvery="Day"
      archiveNumbering="Rolling"
      maxArchiveFiles="7"/>
    <target
      name="biddingfile"
      xsi:type="File"
      fileName="${basedir}/logs/bidding_information.log"
      layout="${message}"/>
    <target name="logconsole" xsi:type="Console" />
  </targets>

  <rules>
    <logger name="*" minlevel="Info" writeTo="logconsole" />
    <logger name="Tosr.*" minlevel="Info" writeTo="logfile" />
    <logger name="bidding" minlevel="Info" writeTo="biddingfile" />
  </rules>
</nlog>